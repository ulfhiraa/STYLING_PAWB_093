<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<style>
    .logo {
        display: block;
        margin: 0 auto 20px auto; /* Gambar ditengah dengan jarak bawah 20px */
        width: 100px; /* Ukuran gambar disesuaikan */
        height: auto; /* Menjaga proporsi gambar */
        background: none; /* Pastikan tidak ada background */
    }

    body,
    html {
        font-family: Quicksand, sans-serif !important;
        height: 100%;
    }

    .navbar .nav-link.active {
        text-decoration: underline;
        color: white !important;
    }

    h1 {
        font-weight: bold;
    }

    .btn {
        border-radius: auto;
        padding: 8px 20px;
        font-weight: bold;
    }

    .btn-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 35px;
    }

    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        justify-content: center;
        margin-bottom: 100px; /* Tambahkan jarak bawah */
    }

    .card {
        width: 18rem;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        background-color: #e1e1e1;
    }

    .card:hover {
        transform: scale(1.05); /* Membesarkan skala card */
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2); /* Menambahkan efek bayangan */
    }

    .card-body {
        text-align: center;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .card-text {
        text-align: left;
    }

    .btn-group {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .footer {
        background-color: #9e9e9e; /* Warna latar belakang */
        color: white; /* Warna teks */
        text-align: center;
        padding: 5px;
    }
</style>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg" style="background-color: #9e9e9e;">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center text-white" href="<%= url %>">
                <img src="/public/images/buku.png" alt="Logo" width="30" height="30" class="d-inline-block align-top me-2">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="<%= url %>">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="<%= url %>profile">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active text-white" href="<%= url %>contact">Todo</a>
                    </li>
                </ul>
                <a href="<%= url %>login/logout" class="d-flex align-items-center text-decoration-none"
                    onclick="return confirmLogout();">
                    <i class="fa fa-sign-out-alt me-2 text-white"></i>
                    <span class="text-white">Sign Out</span>
                </a>
                <script>
                    function confirmLogout() {
                        return confirm("Apakah Anda yakin ingin keluar?");
                    }
                </script>
            </div>
        </div>
    </nav>

    <div class="container pt-5">
        <h1 class="text-center">Books List</h1>

        <div class="btn-container">
            <a href="<%= url + 'contact/add' %>" class="btn btn-primary mb-5">Add Todo</a>
        </div>

        <!-- Card Container -->
        <div class="card-container">
            <% if (buku.length > 0) { %>
                <% buku.forEach(function(contact) { %>
                    <div class="card">
                        <div class="card-body ">
                            <h5 class="card-title"><%= contact.judul %></h5>
                            <p class="card-text">Penulis: <%= contact.pengarang %></p>
                            <p class="card-text">Jenis: <%= contact.jenis %></p>
                            <p class="card-text">Stok: <%= contact.stok %></p>
                            <div class="btn-group">
                                <a href="<%= url + 'contact/edit/' + contact.id %>" class="btn btn-warning btn-sm font-bold">Edit</a>
                                <a href="<%= url + 'contact/delete/' + contact.id %>" class="btn btn-danger btn-sm font-bold"
                                    onclick="return confirm('Apakah Anda yakin ingin menghapus data?')">Delete</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="text-center">
                    <p>No Data</p>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container text-center">
            <p>&copy; <span id="year"></span> Copyright 2024 @de.faulf</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
</body>

</html>
