<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Data Buku</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<style>
    .btn{
        width: 100px;
        height: 35px;
        margin: 0 10px; /* Jarak antar tombol */
        font-weight: bold;
    }
</style>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Edit Data Buku</h1>
        <form id="formEditBuku" action="<%= url + 'contact/update/' + contact.id %>" method="POST" class="border p-4 rounded shadow">
            <!-- Judul Buku -->
            <div class="form-group mb-3">
                <label for="judul" class="form-label">Judul Buku:</label>
                <input type="text" class="form-control" name="judul" id="judul" value="<%= contact.judul %>" required>
            </div>
        
            <!-- Penulis Buku -->
            <div class="form-group mb-3">
                <label for="pengarang" class="form-label">Penulis Buku:</label>
                <input type="text" class="form-control" name="pengarang" id="pengarang" value="<%= contact.pengarang %>" required>
            </div>
           
            <!-- Jenis Buku -->
            <div class="form-group mb-3">
                <label for="jenis" class="form-label">Jenis Buku:</label>
                <select class="form-select" name="jenis" id="jenis" required>
                    <option value="" disabled>Pilih Jenis Buku</option>
                    <option value="Fiksi" <%= contact.jenis === 'Fiksi' ? 'selected' : '' %>>Fiksi</option>
                    <option value="Non-Fiksi" <%= contact.jenis === 'Non-Fiksi' ? 'selected' : '' %>>Non-Fiksi</option>
                </select>
            </div>            
        
            <!-- Stok Buku -->
            <div class="form-group mb-3">
                <label for="stok" class="form-label">Stok Buku:</label>
                <input type="number" class="form-control" name="stok" id="stok" min="0" value="<%= contact.stok %>" required>
            </div>
        
            <!-- Tombol Kirim dan Cancel-->
            <div class="d-flex justify-content-center align-items-center">
                <button type="submit" class="btn btn-primary">Simpan</button>
                <a href="/contact" class="btn btn-secondary">Cancel</a>
            </div>   
        </form>        
    </div>

    <script>
        // Tambahkan event listener pada form
        document.getElementById("formEditBuku").addEventListener("submit", function (e) {
          //  e.preventDefault(); // Mencegah pengiriman form default

            // Tampilkan alert
            alert("Data berhasil diedit!");

            // Redirect atau reset form (opsional)
            // Misalnya: Redirect ke halaman daftar buku
            window.location.href = "/contact";
        });
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
